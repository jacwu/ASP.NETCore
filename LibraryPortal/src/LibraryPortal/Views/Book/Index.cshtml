@{
    ViewData["Title"] = "Book Index";
}

@section Scripts {
    <script src="~/lib/angular/angular.js" type="text/javascript"></script>  
    <script src="~/js/app-library.js" type="text/javascript"></script> 
    <script src="~/js/bookController.js" type="text/javascript"></script> 
}

<div class="container" ng-app="app-library" ng-init="init(@ViewData["type"])" ng-controller="bookController">
    <div class="row listFilter">
        Search book by Name: <input type="text" ng-model="query.name"/>
    </div>
    <div ng-repeat="book in books | filter:query" class="row col-xs-10 row">
        <div>
            <h2 class="itemName">
                {{book.name}}
                {{m}}
            </h2>
             
            <button class="btn btn-lg col-xs-10" ng-click="changeStatus(book)" ng-class="{'btn-info': book.status == 0, 'btn-success': book.status == 1}">{{book.message}}</button>
            
        </div>
        <div class="col-xs-3">
            <img class="lrImg" ng-src="/img/{{book.type}}.jpg"/>
        </div>
        <div class="col-xs-5">
            <div class="lrInfo">
                <span>Author: {{book.author}}</span><br />
                <span>Pages: {{book.pages}}</span><br />
                <span>Year: {{book.year}}</span><br />
                <span>Type: {{book.typename}}</span>                
            </div>
        </div>
        <button class="btn btn-sm btn-primary btnLibrary col-xs-2" ng-click="deleteBook(book)">Delete</button>
    </div>

</div>