@model LibraryPortal.ViewModels.BookViewModel
@using System.Collections.Generic
@using LibraryPortal.Models

@{
    ViewData["Title"] = "New Book";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="Book" asp-action="Create">
    <div class="form-horizontal">
        <h4>Create a new book.</h4>
        <hr/>
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 col-xs-6 control-label"></label>
            <div class="col-sm-4 col-xs-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Year" class="col-sm-2 col-xs-6 control-label"></label>
            <div class="col-sm-4 col-xs-8">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Pages" class="col-sm-2 col-xs-6 control-label"></label>
            <div class="col-sm-4 col-xs-8">
                <input asp-for="Pages" class="form-control" />
                <span asp-validation-for="Pages" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Author" class="col-sm-2 col-xs-6 control-label"></label>
            <div class="col-sm-4 col-xs-8">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="col-sm-2 col-xs-6 control-label"></label>
            <div class="col-sm-4 col-xs-8">
                <select asp-for="Type" class="form-control">
                    @{
                        IEnumerable<BookCategory> cats = ViewData["BookCats"] as IEnumerable<BookCategory>;
                        foreach (var cat in cats)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">New Book</button>
            </div>
        </div>
    </div>
    
</form>


